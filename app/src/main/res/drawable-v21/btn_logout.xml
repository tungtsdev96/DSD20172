<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorRipple">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/water_source"/>
            <stroke android:width="1dp" android:color="@color/water_source"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/water_source"/>
            <stroke android:width="1dp" android:color="@color/water_source"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorPrimary"></solid>
        </shape>
    </item>

</ripple>